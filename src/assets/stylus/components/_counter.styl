@import '../bootstrap'
@import '../theme'

// Contador
.v-counter
    position: fixed
    top: 56px + $grid-gutters.xl
    right: $grid-gutters.xl
    background: rgba($colors.light.base, .9)
    backdrop-filter blur(10px)
    border-radius 6px
    padding: .5rem 1rem
    display flex
    align-items center
    transition 0.2s cubic-bezier(0.4, 0, 0.2, 1)
    z-index 3
    
    @media(max-width 959px)
        top: 56px + $grid-gutters.lg
        right: $grid-gutters.lg
    
    span
        display block
        font-size 14px
        margin-right .5rem
        font-weight 500
        
    strong 
        display block
        font-size 12px
        font-weight 500
        
    &.filter-open
        right: 250px + $grid-gutters.xl
        
        @media(max-width 959px)
            right: 250px + $grid-gutters.lg

.theme--dark
    .v-counter
        background: $colors.dark.base
        color: white
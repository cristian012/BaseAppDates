@font-face
    font-family 'appcitas'
    src url('../fonts/appcitas.eot?y9y11q')
    src url('../fonts/appcitas.eot?y9y11q#iefix') format('embedded-opentype'),
    url('../fonts/appcitas.ttf?y9y11q') format('truetype'),
    url('../fonts/appcitas.woff?y9y11q') format('woff'),
    url('../fonts/appcitas.svg?y9y11q#appcitas') format('svg')
    font-weight normal
    font-style normal
    font-display block

[class^="icon-"], [class*=" icon-"]
    font-family 'appcitas' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased

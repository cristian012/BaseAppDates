@import './app'
@import './components/*'
@import './pages/*'
@import './fontsTheme/*'

// custom statements Overwrite

$font-regular = 'Proxima Nova Rg', sans-serif 
$font-semibold = 'Proxima Nova Sb', sans-serif 
$font-bold = 'Proxima Nova Bl', sans-serif 

$height-navigator = 104px 

// Utility mixins

mixin-border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n


mixin-user-no-select()
    -webkit-user-select: none   /* Chrome all / Safari all */
    -moz-user-select: none      /* Firefox all */
    -ms-user-select: none       /* IE 10+ */
    user-select: none           /* Likely future */


mixin-gradient-background(c1, c2)
    background: c1 
    background: -moz-linear-gradient(90deg, c1 0%, c2 100%) 
    background: -webkit-linear-gradient(90deg, c1 0%, c2 100%) 
    background: linear-gradient(90deg, c1 0%, c2 100%) 


.pgrs_top_navbar
    align-items: flex-end 
    display: flex 
    flex-direction: row 
    font-family: $font-regular 
    height: $height-navigator 
    position: fixed 
    top: 0 
    left: 0 
    right: 0 
    z-index: 2 
 

.pgrs_top_navbar #pgrs_brand_sec_small
    //background: rgba(255,255,255,0.9) 
    border-radius: 4px 
    display: flex   
    flex: 0 0 auto 
    margin-right: 0.4em 
   
    img 
        max-width: 200px



ul.pgrs_list_top_nav
    list-style: none 
    text-decoration: none 
    position relative 
    flex-direction: row 
    align-items: center 
    display: flex 
    padding-left: 0.5em !important
    .pgrs_sublist-item
        padding-right: 1.3em 
        &:hover
            .prgs_sublist-nav
                max-height: 400px 
                margin-top: 0 
            
        
        &::after
            content: '\25bc' 
            color: white 
            height 5px 
            display: flex 
            flex: 1 1 auto 
            line-height: 0 
            position: absolute 
            width: 10px 
            right: 1em 
            top: 1.9em 
            font-size: 8pt 
        
    
    li
        font-family: $font-regular 
        cursor: pointer 
        display: inline-block 
        position: relative 
        border-radius: $button-border-radius 
        mixin-user-no-select() 
        &:hover
            background: rgba(0,0,0,0.15) 
        
        .cont-indicator
            display: flex 
            flex-direction: row 
            .cont-spacer
                display: flex 
                flex: 0 0 10% 
                height: 4px 
            
            .c-indicator
               position: relative  
               flex: 1 1 90% 
               height: 4px 
               .indicator
                    background: transparent  
                    margin: 0 auto  
                    border-radius: 3em 
                    position:absolute 
                    width: 20px  
                    height: 2px  
                    top:-0.2em 
                    left:0 
                    right:0   
                
                .indicator-marked
                    background: #FCC250 !important     
                
            
        
        a
            color: white 
            display: flex 
            flex-direction: row 
            align-items: center 
            text-decoration: none 
            font-size: 16px
            padding: 0.8em 1em 0.8em 1em 
            .prgs_icon_item
                flex: 0 0 auto 
            
            .prgs_label_item
                margin-left: 0.5em 
                flex: 1 1 auto  
                text-transform: capitalize   

.pgrs_control_sec
    flex: 1 1 auto 
    display: flex 
    flex-direction: row 
    justify-content: flex-end 
    align-items: center 
    max-width: 229px 
    .pgrs_label_profile
        .pgrs_label_p
            background: #CBE39F 
            padding: 0.3em 
            color: #000 
            font-size: 8pt 
            border-radius: 2em 
            text-align:center 
    
    .pgrs_cont_btn
        display: flex 
        flex: 1 1 auto   
    
    .pgrs_access-profile
        .pgrs_access_menu
            position: relative
            &::after
                content: '\25bc' 
                color: white 
                height 8px 
                display: flex 
                flex: 1 1 auto 
                line-height: 0 
                position: absolute 
                width: 10px 
                right: -0.3em 
                top: 1em 
                font-size: 8pt 
        .pgrs_profile
            width: 44px !important 
            height:44px !important 
            background: rgba(255,255,255,0.3) 
            position relative 
            border-radius: 10em 
            padding: .18em 
            cursor: pointer 
            
            .pgrs_photo
                background: #FCC250
                border-radius: 10em 
                overflow hidden 
                width: 38px 
                height: 38px 
            

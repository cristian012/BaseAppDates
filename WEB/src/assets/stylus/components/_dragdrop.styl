.is-active {
    z-index: 100;
}

.is-dropped {
    opacity: 0;
    -webkit-transform: scale3d(0.7,0.7,1) !important;
    transform: scale3d(0.7,0.7,1) !important;
}

.is-complete {
    opacity: 1;
    -webkit-transition: opacity 0.3s, -webkit-transform 0.3s !important;
    transition: opacity 0.3s, transform 0.3s !important;
    -webkit-transform: scale3d(1,1,1) !important;
    transform: scale3d(1,1,1) !important;
}

.animate {
    -webkit-transition: all 0.3s ease-out;
    transition: all 0.3s ease-out;
}

.drop-area 
    position: fixed
    top: 0
    left: 100%
    z-index: 99
    width: 300px
    height: 100%
    overflow-y: auto
    overflow-x: hidden
    background: $colors.light.darken-2
    text-align: left
    transition: transform 0.5s
    transform: translate3d(20px,0,0)
    
    @media(max-width 650px)
        width 80vw


.drop-area.show 
    transform: translate3d(-100%,0,0)
    elevation(10)
    
    @media(max-width 650px)
        transform: translate3d(-100%,0,0)


.drop-area > div {
    width: 100%;
    height: 100%;
    transition: transform 0.4s 0.1s;
    transform: translate3d(50%,0,0);
    padding: 2rem;
}

.drop-area.show > div {
    transform: translate3d(0,0,0);
}

.drop-area__item 
    position: relative
    display: flex
    flex-direction column
    align-items center
    justify-content center
    align-content center
    margin: 0 0 2rem
    width: 100%
    height: 12em
    border-radius: 4px
    background: $colors.dark.lighten-2
    color white
    text-align: center
    transition: transform 0.3s, background 0.3s
    
    h2 
        order -1
        font-weight 400
        font-size 20px
        margin-bottom 1rem

    &.highlight
        transform: scale3d(1.1,1.1,1)

    &::before
    &::after 
        position: relative
        width: 100%
        font-size: 1.5em
        pointer-events: none
        @extend .material-icons

    &::before 
        content: 'add'

.drop-feedback.drop-area__item::before 
    opacity: 0
    font-size 0
    transform: scale3d(0,0,1)

.drop-area__item::after 
    content: 'check'
    font-size: 0
    opacity: 0
    transition: opacity 0.3s, transform 0.3s, font-size 0.3s
    transform: scale3d(1.2,1.2,1)

.drop-feedback.drop-area__item::after 
    font-size: 3em
    opacity: 1
    transform: scale3d(1,1,1)

.drop-overlay 
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,0.3)
    opacity: 0
    -webkit-transition: opacity 0.3s
    transition: opacity 0.3s
    pointer-events: none
    z-index 98

.drop-area.show + .drop-overlay 
    opacity: 1

.helper
    font-size: 2em
    position: absolute !important
    margin: 0

.theme--dark
    .drop-area 
        background: $colors.dark.darken-1